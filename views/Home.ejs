<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Employee Management System</title>
</head>

<body>
    <h1>Employee Management System</h1>

    <!-- Form to Add an Employee -->
    <h2>Add Employee</h2>
    <form method="POST" action="/">
        <label for="employeeName">Employee Name:</label>
        <input type="text" id="employeeName" name="employeeName" required>
        <br>
        <label for="employeePost">Employee Post:</label>
        <input type="text" id="employeePost" name="employeePost" required>
        <br>
        <label for="employeeSalary">Employee Salary:</label>
        <input type="text" id="employeeSalary" name="employeeSalary" required>
        <br>
        <button type="submit">Add Employee</button>
    </form>

    <!-- List of Employees -->
    <h2>Employee List</h2>
    <ul>
        <% data.forEach(function(employee) { %>
            <li>
                Employee ID:
                <%= employee.employeeId %><br> Name:
                    <%= employee.employeeName %><br> Post:
                        <%= employee.employeePost %><br> Salary:
                            <%= employee.employeeSalary %><br>
                                <form method="POST" action="/update">
                                    <input type="hidden" name="employeeId" value="<%= employee.employeeId %>">
                                    <button type="submit">Update</button>
                                </form>
                                <form method="POST" action="/delete">
                                    <input type="hidden" name="employeeId" value="<%= employee.employeeId %>">
                                    <button type="submit">Delete</button>
                                </form>
            </li>
            <% }); %>
    </ul>
</body>

</html>